
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model Account {
  id              Int         @id @default(autoincrement())
  email           String      @unique
  hash            String
  type            AccountType
  student         Student?
  mentor          Mentor?
}

model Student {
  id              Int         @id @default(autoincrement())
  name            String 
  classes         Class[]
  mentors         Mentor[]
  interestes      Subject[]
  account         Account     @relation(fields: [accountEmail], references: [email])
  accountEmail    String      @unique
}

model Mentor {
  id              Int         @id @default(autoincrement())
  name            String
  professions     Subject[]
  classes         Class[]
  students        Student[]
  account         Account     @relation(fields: [accountEmail], references: [email])
  accountEmail    String      @unique
}

model Class {
  id              Int         @id @default(autoincrement())
  name            String
  students        Student[]
  mentors         Mentor[]
  lessons         Lesson[]
  subject         Subject     @relation(fields: [subjectId], references: [id])
  subjectId       Int
}

model Subject {
  id              Int         @id @default(autoincrement())
  name            SubjectName 
  mentors         Mentor[]
  classes         Class[]
  students        Student[]
  lessons         Lesson[]
}

model Lesson {
  id              Int         @id @default(autoincrement())
  title           String
  subject         Subject     @relation(fields: [subjectId], references: [id])
  subjectId       Int
  class           Class       @relation(fields: [classId], references: [id])
  classId         Int
}

enum SubjectName {
  MATH
  ART
  HISTORY 
}

enum AccountType {
  STUDENT
  MENTOR
}
